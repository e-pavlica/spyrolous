.pure-g-r
  .pure-u-1-5
    =link_to "new canvas", new_canvas_path, {class:"pure-button", id:"newCanvas"}
  .pure-u-3-5.canvasIndex
    %h3 My Canvases
    -@artist.canvases.each do |c|
      %a{href:"/canvases/#{c.id}"}
        %svg{id:"c#{c.id}", class:'canvasThumb'}
          :javascript 
            var s#{c.id} = Snap("#c#{c.id}");
            Snap.load("/canvases/svgs/#{c.id}", function(f){
            s#{c.id}.append(f);
            });
  .pure-u-1-5